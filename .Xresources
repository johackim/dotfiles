! xrdb -merge ~/.Xresources (TO APPLY CHANGES)

! Grayscale dark theme modified
! special
*.foreground:   #ffffff
*.background:   #101010
*.cursorColor:  #ffffff

! black
*.color0:       #101010
*.color8:       #525252

! red
*.color1:       #828282
*.color9:       #828282

! green
*.color2:       #828282
*.color10:      #828283

! yellow
*.color3:       #a0a0a0
*.color11:      #a0a0a0

! blue
*.color4:       #686868
*.color12:      #686868

! magenta
*.color5:       #747474
*.color13:      #747474

! cyan
*.color6:       #FFFFFF
*.color14:      #FFFFFF

! white
*.color7:       #FFFFFF
*.color15:      #FFFFFF

! Italic color tmux
URxvt*colorIT: #FFFFFF

URxvt.scrollBar: false

! Inconsolata Font
URxvt*font: xft:Inconsolata:size=10, xft:Inconsolata for Powerline, xft:Noto Emoji
URxvt*letterSpace: 1

URxvt.cursorBlink: true

URxvt*.transparent: true
URxvt*.shading: 30

URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.perl-lib: .urxvt/perl
URxvt.perl-ext-common: default,matcher,clipboard,url-picker,font-size,notify

URxvt.keysym.C-Right: \033[1;5C
URxvt.keysym.C-Left: \033[1;5D
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste

URxvt.keysym.C-f: perl:url-picker
URxvt.url-picker.launcher: chromium
URxvt.keysym.C-0xff0d: perl:url-picker

URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease

URxvt.urgentOnBell: true

Xft.dpi: 128 # xrdb -query | grep dpi
xterm*font: *-fixed-*-*-*-18-*
