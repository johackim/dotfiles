[mpd]
label=♪
command=mpc current
interval=1

[battery]
command=$SCRIPT_DIR/battery2/battery2
markup=pango
interval=30

[cpu_usage]
label=
command=/usr/lib/i3blocks/cpu_usage
interval=1

[disk-home]
label=
command=df -h -P -l $HOME | awk '/\/.*/ { print $4; exit 0 }'
interval=30

[volume]
label=♪
command=amixer get Master | grep -E -o '[0-9]{1,3}?%' | head -1
interval=1

[time]
label=
command= date '+%a %d.%m.%Y %H:%M:%S'
interval=1
